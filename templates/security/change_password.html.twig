{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<div class="container py-3 py-md-4" style="max-width: 520px;">
  <div class="mb-3">
    <h1 class="h3 mb-1">Changer le mot de passe</h1>
    <div class="text-body-secondary">
      {% if requiresOldPassword %}
        Saisis ton mot de passe actuel, puis le nouveau.
      {% else %}
        Tu n’as pas encore de mot de passe. Tu peux en définir un maintenant.
      {% endif %}
    </div>
  </div>

  <form method="post" class="card" data-turbo="false">
    <div class="card-body">
      {% if requiresOldPassword %}
        <div class="mb-3">
          <label for="oldPassword" class="form-label">Mot de passe actuel</label>
          <input
            type="password"
            id="oldPassword"
            name="oldPassword"
            class="form-control"
            autocomplete="current-password"
            required
          >
        </div>
      {% endif %}

      <div class="mb-3">
        <label for="newPassword" class="form-label">Nouveau mot de passe</label>
        <input
          type="password"
          id="newPassword"
          name="newPassword"
          class="form-control"
          autocomplete="new-password"
          required
          minlength="8"
        >
        <div class="form-text">Minimum 8 caractères.</div>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
          Mettre à jour
        </button>
      </div>
    </div>
  </form>
</div>
{% endblock %}
