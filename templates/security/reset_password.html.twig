{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
<div class="container py-3 py-md-4" style="max-width: 520px;">
  <div class="mb-3">
    <h1 class="h3 mb-1">Nouveau mot de passe</h1>
    <div class="text-body-secondary">
      Choisis un nouveau mot de passe pour ton compte.
    </div>
  </div>

  <form method="post" class="card" data-turbo="false">
    <div class="card-body">
      <div class="mb-3">
        <label for="plainPassword" class="form-label">Nouveau mot de passe</label>
        <input
          type="password"
          id="plainPassword"
          name="plainPassword"
          class="form-control"
          autocomplete="new-password"
          required
          minlength="8"
        >
        <div class="form-text">Minimum 8 caractères.</div>
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg">
          Mettre à jour
        </button>
        <a href="{{ path('app_login') }}" class="btn btn-link">
          Retour à la connexion
        </a>
      </div>
    </div>
  </form>

  {# token gardé dans l'URL, pas besoin de hidden #}
</div>
{% endblock %}
