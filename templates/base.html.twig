<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}KuKo{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
    {% endblock %}

    {% block javascripts %}
      {{ importmap('app') }}
    {% endblock %}
  </head>

  <body>
    {# ==========================================================
       HEADER (Desktop: top nav) + (Mobile: compact top header)
       ========================================================== #}
    <header class="rp-header sticky-top">
      <div class="container">
        <div class="d-flex align-items-center justify-content-between gap-3 py-2">

          {# Brand #}
          <a href="{{ path('meal_plan_index') }}" class="rp-brand d-flex align-items-center gap-2 text-decoration-none">
            <img class="rp-brand-mark" src="{{ asset('img/logo.png') }}" alt="">
            <span class="rp-brand-name">Kuko</span>
          </a>

          {# Desktop nav #}
          <nav class="rp-topnav d-none d-lg-flex align-items-center gap-2" aria-label="Navigation principale">
            <a
              href="{{ path('meal_plan_index') }}"
              class="rp-topnav-link {{ app.request.attributes.get('_route') starts with 'meal_plan' ? 'is-active' : '' }}"
            >
              <img class="rp-top-nav-action-thumb" src="{{ asset('img/actions/planning.png') }}" alt="">
              Planning
            </a>

            <a
              href="{{ path('stock_index') }}"
              class="rp-topnav-link {{ app.request.attributes.get('_route') starts with 'stock_' ? 'is-active' : '' }}"
            >
              <img class="rp-top-nav-action-thumb" src="{{ asset('img/actions/stock.png') }}" alt="">
              Stock
            </a>

            <a
              href="{{ path('app_recipe_index') }}"
              class="rp-topnav-link {{ app.request.attributes.get('_route') starts with 'app_recipe' ? 'is-active' : '' }}"
            >
              <img class="rp-top-nav-action-thumb" src="{{ asset('img/actions/recettes.png') }}" alt="">
              Recettes
            </a>

            <a
              href="{{ path('shopping_index') }}"
              class="rp-topnav-link {{ app.request.attributes.get('_route') starts with 'shopping_' ? 'is-active' : '' }}"
            >
              <img class="rp-top-nav-action-thumb" src="{{ asset('img/actions/courses.png') }}" alt="">
              Courses
            </a>

            <a
              href="{{ path('assistant') }}"
              class="rp-topnav-link rp-topnav-link-assistant {{ app.request.attributes.get('_route') starts with 'assistant' ? 'is-active' : '' }}"
            >
              <img class="rp-top-nav-action-thumb" src="{{ asset('img/actions/assistant.png') }}" alt="">
              Assistant
            </a>
          </nav>

          {# Desktop actions (right) #}
          <div class="d-none d-lg-flex align-items-center gap-2">
            {# CTA contextual (optionnel): tu peux remplacer par un block Twig par page #}
            {% block header_cta %}{% endblock %}

            <a href="{{ path('account_index') }}">
              <img
                src="{{ asset('img/actions/account.png') }}"
                alt=""
                class="rp-action-thumb"
              >
            </a>
          </div>

          {# Mobile: right side (optional quick action) #}
          <div class="d-lg-none d-flex align-items-center gap-2">
            <a href="{{ path('account_index') }}">
              <img
                src="{{ asset('img/actions/account.png') }}"
                alt=""
                class="rp-action-thumb"
              >
            </a>
          </div>

        </div>
      </div>
    </header>

    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
          {{ message }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {% endfor %}
    {% endfor %}

    {% if app.user and not app.user.isVerified %}
      <div class="alert alert-warning d-flex align-items-center justify-content-between mt-2" role="alert">
        <div class="me-2">
          <div class="fw-semibold">Ton email n’est pas confirmé.</div>
          <div class="small text-body-secondary">Certaines fonctionnalités peuvent être limitées tant que ce n’est pas fait.</div>
        </div>
        <div class="d-flex gap-2">
          <form method="post" action="{{ path('register_resend') }}" data-turbo="false">
            <input type="hidden" name="email" value="{{ app.user.email }}">
            <input type="hidden" name="_token" value="{{ csrf_token('resend_verification') }}">
            <button type="submit" class="btn btn-sm btn-outline-dark">Renvoyer</button>
          </form>
          <a href="{{ path('register_check_email', {email: app.user.email}) }}" class="btn btn-sm btn-dark">Détails</a>
        </div>
      </div>
    {% endif %}


    {# Main content #}
    <main class="container">
      <div class="rp-page">
        {% block body %}{% endblock %}
      </div>
    </main>

    {# Mobile bottom navigation (shown only on small screens) #}
    <nav class="rp-bottom-nav d-lg-none" aria-label="Navigation principale">
      <a href="{{ path('meal_plan_index') }}"
         class="rp-tab {{ app.request.attributes.get('_route') starts with 'meal_plan' ? 'is-active' : '' }}">
        <img class="rp-nav-action-thumb" src="{{ asset('img/actions/planning.png') }}" alt="">
        <span>Planning</span>
      </a>

      <a href="{{ path('stock_index') }}"
         class="rp-tab {{ app.request.attributes.get('_route') starts with 'stock_' ? 'is-active' : '' }}">
        <img class="rp-nav-action-thumb" src="{{ asset('img/actions/stock.png') }}" alt="">
        <span>Stock</span>
      </a>

      <a href="{{ path('app_recipe_index') }}"
         class="rp-tab {{ app.request.attributes.get('_route') starts with 'app_recipe' ? 'is-active' : '' }}">
        <img class="rp-nav-action-thumb" src="{{ asset('img/actions/recettes.png') }}" alt="">
        <span>Recettes</span>
      </a>

      <a href="{{ path('shopping_index') }}"
         class="rp-tab {{ app.request.attributes.get('_route') starts with 'shopping' ? 'is-active' : '' }}">
        <img class="rp-nav-action-thumb" src="{{ asset('img/actions/courses.png') }}" alt="">
        <span>Courses</span>
      </a>

      <a href="{{ path('assistant') }}"
         class="rp-tab rp-tab-assistant {{ app.request.attributes.get('_route') starts with 'assistant' ? 'is-active' : '' }}">
        <img class="rp-nav-action-thumb" src="{{ asset('img/actions/assistant.png') }}" alt="">
        <span>Assistant</span>
      </a>
    </nav>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
