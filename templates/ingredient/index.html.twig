{% extends 'base.html.twig' %}

{% block title %}Ingr√©dients{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">üßÇ Ingr√©dients</h1>

    <a href="{{ path('app_ingredient_new') }}" class="btn btn-primary">
      ‚ûï Nouvel ingr√©dient
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>Nom</th>
            <th>Unit√©</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for ingredient in ingredients %}
            {% set imgSrc = ingredient_image(ingredient) %}

            <tr
              data-controller="image-generate"
              data-image-generate-url-value="{{ path('app_image_generate_ingredient', {id: ingredient.id}) }}"
              data-image-generate-base-src-value="{{ imgSrc }}"
              data-image-generate-refresh-param-value="v"
            >
              <td>
                <div class="d-flex align-items-center gap-2">
                  <img
                    src="{{ imgSrc }}"
                    alt="{{ ingredient.name }}"
                    width="24"
                    height="24"
                    loading="lazy"
                    decoding="async"
                    style="object-fit: contain; border-radius: 6px;"
                    data-image-generate-target="img"
                    data-image-generate-base-src-value="{{ imgSrc }}"
                  >
                  <span>{{ ingredient.name }}</span>
                </div>
              </td>

              <td>
                {{ ingredient.unit is defined and ingredient.unit ? ingredient.unit.value : '' }}
              </td>

              <td class="text-end">
                <a
                  href="{{ path('app_ingredient_edit', { id: ingredient.id }) }}"
                  class="btn btn-sm btn-outline-secondary rp-icon-btn"
                  title="Modifier"
                  aria-label="Modifier"
                >
                  <i class="fa-solid fa-pen"></i>
                </a>

                <button
                  class="btn btn-sm btn-outline-primary"
                  data-action="click->image-generate#generate"
                  title="G√©n√©rer l‚Äôimage"
                  aria-label="G√©n√©rer l‚Äôimage"
                >
                  ‚ú® G√©n√©rer l‚Äôimage
                </button>

                {{ include('ingredient/_delete_form.html.twig', { ingredient }) }}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="3" class="text-center text-muted py-4">
                Aucun ingr√©dient
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
