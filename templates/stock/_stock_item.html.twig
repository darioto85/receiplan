{# templates/stock/_stock_item.html.twig #}

{% set ing = ui.ingredient ?? null %}
{% set ingName = ing ? ing.name : 'Ingrédient supprimé' %}

{# Si tu as un placeholder local #}
{% set ingImg = ing ? ingredient_image(ing) : asset('img/ingredient/placeholder.png') %}

{% set unitValue = ui.unitValue|default('') %}
{% set unitLabel = ui.unitLabel|default(unitValue) %}
{% set updateUrl = path('stock_update_quantity', { id: ui.id }) %}
{% set updateToken = csrf_token('update_stock_' ~ ui.id) %}

{% if variant == 'mobile' %}

  <div
    class="swipe-item {% if first|default(false) %}swipe-hint{% endif %}"
    data-stock-item-id="{{ ui.id }}"
    data-stock-item-name="{{ ingName }}"
    data-controller="swipe-reveal"
    data-swipe-reveal-open-class-value="is-revealed"
  >
    <div class="swipe-actions">
      <form
        method="post"
        action="{{ path('stock_delete', { id: ui.id }) }}"
        data-action="submit->stock#deleteItem"
      >
        <input type="hidden" name="_token" value="{{ csrf_token('delete_stock_' ~ ui.id) }}">

        <button type="submit" class="rp-action-btn swipe-trash" title="Supprimer" aria-label="Supprimer">
          <img src="{{ asset('img/actions/delete.png') }}" alt="" class="rp-action-thumb">
        </button>
      </form>
    </div>

    <div class="swipe-content">
      <div class="d-flex align-items-center justify-content-between gap-2">

        {# ===== LEFT: image + name ===== #}
        <div class="d-flex align-items-center gap-2 flex-grow-1" style="min-width:0;">
          <img
            src="{{ ingImg }}"
            alt="{{ ingName }}"
            width="50"
            height="50"
            loading="lazy"
            decoding="async"
            style="object-fit: contain; border-radius: 8px; flex: 0 0 auto;"
          >
          <div class="text-truncate">
            <span class="fw-semibold">{{ ingName|capitalize }}</span>
            {% if not ing %}
              <span class="badge text-bg-warning ms-2">supprimé</span>
            {% endif %}
          </div>
        </div>

        {# ===== RIGHT: quantity + unit (unité du stock user) ===== #}
        <div class="flex-shrink-0" style="width: 110px;">
          <button
            type="button"
            class="rp-qty-btn p-0 border-0 bg-transparent w-100"
            data-action="click->stock#openQuantityModal"
            data-stock-qty-id="{{ ui.id }}"
            data-stock-qty-name="{{ ingName }}"
            data-stock-qty-value="{{ ui.quantity }}"
            data-stock-qty-unit="{{ unitLabel ?: 'unité' }}"
            data-stock-qty-url="{{ updateUrl }}"
            data-stock-qty-token="{{ updateToken }}"
            aria-label="Modifier la quantité"
          >
            <div class="input-group input-group-sm">
              <span class="form-control text-end" style="pointer-events:none;">
                <span class="fw-bold" data-stock-qty-display>{{ ui.quantity }}</span>
              </span>
              <span class="input-group-text text-muted" style="max-width: 54px; overflow:hidden; text-overflow:ellipsis;">
                {{ unitLabel ?: '—' }}
              </span>
            </div>
          </button>
        </div>

      </div>
    </div>
  </div>

{% else %}

  <tr data-stock-item-id="{{ ui.id }}" data-stock-item-name="{{ ingName }}">
    <td>
      <div class="d-flex align-items-center gap-2">
        <img
          src="{{ ingImg }}"
          alt="{{ ingName }}"
          width="50"
          height="50"
          loading="lazy"
          style="object-fit: contain; border-radius: 6px;"
        >
        <span>{{ ingName|capitalize }}</span>
        {% if not ing %}
          <span class="badge text-bg-warning ms-2">supprimé</span>
        {% endif %}
      </div>
    </td>

    {# Desktop: inline edit invisible #}
    <td class="text-end">
      <span
        class="rp-qty"
        data-stock-qty-id="{{ ui.id }}"
        data-stock-qty-value="{{ ui.quantity }}"
        data-stock-qty-url="{{ updateUrl }}"
        data-stock-qty-token="{{ updateToken }}"
        data-action="click->stock#startEditQuantity"
      >
        <span class="fw-bold" data-stock-qty-display>{{ ui.quantity }}</span>

        <input
          type="text"
          inputmode="decimal"
          class="rp-qty-input"
          value="{{ ui.quantity }}"
          data-action="blur->stock#commitEditQuantity keydown->stock#quantityKeydown"
        >
      </span>
    </td>

    <td class="text-end">{{ unitLabel ?: '—' }}</td>

    <td class="text-end">
      <form
        method="post"
        action="{{ path('stock_delete', { id: ui.id }) }}"
        class="d-inline"
        data-action="submit->stock#deleteItem"
      >
        <input type="hidden" name="_token" value="{{ csrf_token('delete_stock_' ~ ui.id) }}">
        <button type="submit" class="rp-action-btn" title="Supprimer" aria-label="Supprimer">
          <img src="{{ asset('img/actions/delete.png') }}" alt="" class="rp-action-thumb">
        </button>
      </form>
    </td>
  </tr>

{% endif %}