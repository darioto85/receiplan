{# templates/stock/_listing.html.twig #}

{% if items is empty %}
  <div class="text-muted">Aucun ingrédient en stock.</div>
{% else %}

  <div class="d-grid gap-2 d-md-none" data-stock-target="mobileList">
    {% for ui in items %}
      {{ include('stock/_stock_item.html.twig', { ui: ui, variant: 'mobile', first: loop.first }) }}
    {% endfor %}
  </div>

  <div class="table-responsive d-none d-md-block" data-stock-target="desktopTable">
    <table class="table align-middle mb-0">
      <thead>
        <tr>
          <th>Ingrédient</th>
          <th class="text-end">Quantité</th>
          <th class="text-end">Unité</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>

      <tbody data-stock-target="desktopTbody">
        {% for ui in items %}
          {{ include('stock/_stock_item.html.twig', { ui: ui, variant: 'desktop' }) }}
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endif %}
