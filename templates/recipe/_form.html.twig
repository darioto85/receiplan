{{ form_start(form) }}

<div class="mb-3">
  {{ form_label(form.name, null, { label_attr: { class: 'form-label' } }) }}
  {{ form_widget(form.name, { attr: { class: 'form-control' } }) }}
  {{ form_errors(form.name) }}
</div>

<hr>

<h5 class="mb-3">üßÇ Ingr√©dients</h5>

{# ‚úÖ Prototype custom avec le m√™me layout que tes items #}
{% set prototype %}
  <div class="row g-2 align-items-end mb-2" data-collection-target="item">
    <div class="col-md-6">
      {{ form_widget(form.recipeIngredients.vars.prototype.ingredient) }}
    </div>
    <div class="col-md-4">
      {{ form_widget(form.recipeIngredients.vars.prototype.quantity) }}
    </div>
    <div class="col-md-2">
      <button
        type="button"
        class="btn btn-outline-danger w-100"
        data-action="collection#remove"
      >
        ‚úï
      </button>
    </div>
  </div>
{% endset %}

<div
  data-controller="collection"
  data-collection-prototype-value="{{ prototype|e('html_attr') }}"
  data-collection-index-value="{{ form.recipeIngredients|length }}"
>
  <div data-collection-target="list">
    {% for itemForm in form.recipeIngredients %}
      <div class="row g-2 align-items-end mb-2" data-collection-target="item">
        <div class="col-md-6">
          {{ form_widget(itemForm.ingredient) }}
        </div>
        <div class="col-md-4">
          {{ form_widget(itemForm.quantity) }}
        </div>
        <div class="col-md-2">
          <button
            type="button"
            class="btn btn-outline-danger w-100"
            data-action="collection#remove"
          >
            ‚úï
          </button>
        </div>
      </div>
    {% endfor %}
  </div>

  <button
    type="button"
    class="btn btn-outline-primary mt-3"
    data-action="collection#add"
  >
    ‚ûï Ajouter un ingr√©dient
  </button>
</div>

<div class="d-flex justify-content-between mt-4">
  <a href="{{ path('app_recipe_index') }}" class="btn btn-link">
    ‚Üê Retour
  </a>

  <button class="btn btn-success">
    {{ button_label|default('Enregistrer') }}
  </button>
</div>

{{ form_end(form) }}

<div class="modal fade"
     id="ingredientCreateModal"
     tabindex="-1"
     aria-hidden="true"
     data-controller="ingredient-create"
>
  <div class="modal-dialog">
    <div class="modal-content" data-ingredient-create-target="modalContent">
      <div class="modal-header">
        <h5 class="modal-title">Ajouter un ingr√©dient</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
      </div>

      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Nom</label>
          <input type="text" class="form-control" data-ingredient-create-target="nameInput">
          <div class="invalid-feedback" data-ingredient-create-target="nameError"></div>
        </div>

        <div class="mb-3">
          <label class="form-label">Unit√©</label>
          <input type="text" class="form-control" placeholder="g, ml, pi√®ce‚Ä¶" data-ingredient-create-target="unitInput">
          <div class="invalid-feedback" data-ingredient-create-target="unitError"></div>
        </div>

        <input type="hidden" value="{{ csrf_token('ingredient_quick_create') }}" data-ingredient-create-target="csrfToken">
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" data-action="ingredient-create#submit">Ajouter</button>
      </div>
    </div>
  </div>
</div>
