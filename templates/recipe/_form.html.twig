{{ form_start(form) }}

<div class="mb-3">
  {{ form_label(form.name, null, { label_attr: { class: 'form-label' } }) }}
  {{ form_widget(form.name, { attr: { class: 'form-control' } }) }}
  {{ form_errors(form.name) }}
</div>

<hr>

<h5 class="mb-3">üßÇ Ingr√©dients</h5>

{# ‚úÖ Prototype custom avec le m√™me layout que tes items #}
{% set prototype %}
  <div class="row g-2 align-items-end mb-2" data-collection-target="item">
    <div class="col-md-6">
      {{ form_widget(form.recipeIngredients.vars.prototype.ingredient) }}
    </div>
    <div class="col-md-4">
      {{ form_widget(form.recipeIngredients.vars.prototype.quantity) }}
    </div>
    <div class="col-md-2">
      <button
        type="button"
        class="btn btn-outline-danger w-100"
        data-action="collection#remove"
      >
        ‚úï
      </button>
    </div>
  </div>
{% endset %}

<div
  data-controller="collection"
  data-collection-prototype-value="{{ prototype|e('html_attr') }}"
  data-collection-index-value="{{ form.recipeIngredients|length }}"
>
  <div data-collection-target="list">
    {% for itemForm in form.recipeIngredients %}
      <div class="row g-2 align-items-end mb-2" data-collection-target="item">
        <div class="col-md-6">
          {{ form_widget(itemForm.ingredient) }}
        </div>
        <div class="col-md-4">
          {{ form_widget(itemForm.quantity) }}
        </div>
        <div class="col-md-2">
          <button
            type="button"
            class="btn btn-outline-danger w-100"
            data-action="collection#remove"
          >
            ‚úï
          </button>
        </div>
      </div>
    {% endfor %}
  </div>

  <button
    type="button"
    class="btn btn-outline-primary mt-3"
    data-action="collection#add"
  >
    ‚ûï Ajouter un ingr√©dient
  </button>
</div>

<div class="d-flex justify-content-between mt-4">
  <a href="{{ path('app_recipe_index') }}" class="btn btn-link">
    ‚Üê Retour
  </a>

  <button class="btn btn-success">
    {{ button_label|default('Enregistrer') }}
  </button>
</div>

{{ form_end(form) }}
