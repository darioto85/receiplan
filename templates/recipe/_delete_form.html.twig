<form
  method="post"
  action="{{ path('app_recipe_delete', { id: recipe.id }) }}"
  class="d-inline"
  onsubmit="return confirm('Supprimer cette recette ?');"
>
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ recipe.id) }}"
  >
  <button class="rp-action-btn">
    <img
      src="{{ asset('img/actions/delete.png') }}"
      alt=""
      class="rp-action-thumb"
    >
  </button>
</form>
