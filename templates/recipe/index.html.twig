{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 mb-0">üìñ Recettes</h1>

    <a href="{{ path('app_recipe_new') }}" class="btn btn-primary">
      ‚ûï Nouvelle recette
    </a>
  </div>

  {# =========================
     ‚úÖ Recettes faisables
     ========================= #}
  <div class="d-flex align-items-center gap-2 mb-2">
    <h2 class="h6 mb-0">‚úÖ Faisables</h2>
    <span class="badge text-bg-success">{{ feasible|length }}</span>
  </div>

  {% if feasible|length == 0 %}
    <div class="card mb-4">
      <div class="card-body text-muted">
        Aucune recette faisable avec ton stock actuel.
      </div>
    </div>
  {% else %}
    <div class="d-grid gap-3 mb-4">
      {% for view in feasible %}
        {% set recipe = view.recipe %}
        {% set recipeImg = recipe_image(recipe) %}

        <div class="card">
          {# ‚úÖ le controller englobe tout le header (image + bouton) #}
          <div
            class="card-header d-flex justify-content-between align-items-center"
            data-controller="image-generate"
            data-image-generate-url-value="{{ path('app_image_generate_recipe', {id: recipe.id}) }}"
            data-image-generate-base-src-value="{{ recipeImg }}"
            data-image-generate-refresh-param-value="v"
          >
            <div class="d-flex align-items-center gap-2">
              <img
                src="{{ recipeImg }}"
                alt="{{ recipe.name }}"
                width="28"
                height="28"
                loading="lazy"
                decoding="async"
                style="object-fit: contain; border-radius: 8px;"
                data-image-generate-target="img"
                data-image-generate-base-src-value="{{ recipeImg }}"
              >
              <strong>{{ recipe.name }}</strong>
              <span class="badge text-bg-success">OK</span>
            </div>

            <div class="d-flex gap-2">
              <button
                class="btn btn-sm btn-outline-primary"
                data-action="click->image-generate#generate"
                title="G√©n√©rer l‚Äôimage"
                aria-label="G√©n√©rer l‚Äôimage"
              >
                ‚ú®
              </button>

              <a
                href="{{ path('app_recipe_edit', { id: recipe.id }) }}"
                class="btn btn-sm btn-outline-secondary rp-icon-btn"
                title="Modifier"
                aria-label="Modifier"
              >
                <i class="fa-solid fa-pen"></i>
              </a>

              {{ include('recipe/_delete_form.html.twig', { recipe }) }}
            </div>
          </div>

          <div class="card-body p-0">
            {% if view.items|length == 0 %}
              <div class="p-3 text-muted">
                Aucun ingr√©dient.
              </div>
            {% else %}
              <div class="table-responsive">
                <table class="table mb-0 align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Ingr√©dient</th>
                      <th class="text-end">Besoin</th>
                      <th class="text-end">Stock</th>
                      <th class="text-end">Statut</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for item in view.items %}
                      {% set ing = item.ingredient %}
                      {% set unit = item.unitLabel
                        ?? (item.unit is defined and item.unit ? item.unit.value : '')
                      %}

                      <tr>
                        <td>
                          {% if ing %}
                            {% set ingImg = ingredient_image(ing) %}
                            <div class="d-flex align-items-center gap-2">
                              <img
                                src="{{ ingImg }}"
                                alt="{{ ing.name }}"
                                width="24"
                                height="24"
                                loading="lazy"
                                decoding="async"
                                style="object-fit: contain; border-radius: 6px;"
                              >
                              <span>{{ ing.name }}</span>
                            </div>
                          {% else %}
                            Ingr√©dient supprim√©
                          {% endif %}
                        </td>

                        <td class="text-end">
                          {% if item.needed is null %}
                            <span class="text-muted">‚Äî</span>
                          {% else %}
                            {{ item.needed }}
                            {% if unit == 'piece' %}
                              <span class="d-none d-md-inline"> {{ unit }}</span>
                            {% else %}
                              {{ unit }}
                            {% endif %}
                          {% endif %}
                        </td>

                        <td class="text-end">
                          <span class="fw-semibold">{{ item.stock }}</span>
                          {% if unit == 'piece' %}
                            <span class="d-none d-md-inline"> {{ unit }}</span>
                          {% else %}
                            {{ unit }}
                          {% endif %}
                        </td>

                        <td class="text-end">
                          <span class="badge text-bg-success">OK</span>
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {# =========================
     ‚ùå Recettes non faisables
     ========================= #}
  <div class="d-flex align-items-center gap-2 mb-2">
    <h2 class="h6 mb-0">‚ùå Stock insuffisant</h2>
    <span class="badge text-bg-danger">{{ insufficient|length }}</span>
  </div>

  {% if insufficient|length == 0 %}
    <div class="card">
      <div class="card-body text-muted">
        Super : aucune recette en manque.
      </div>
    </div>
  {% else %}
    <div class="d-grid gap-3">
      {% for view in insufficient %}
        {% set recipe = view.recipe %}
        {% set recipeImg = recipe_image(recipe) %}

        <div class="card">
          {# ‚úÖ le controller englobe tout le header (image + bouton) #}
          <div
            class="card-header d-flex justify-content-between align-items-center"
            data-controller="image-generate"
            data-image-generate-url-value="{{ path('app_image_generate_recipe', {id: recipe.id}) }}"
            data-image-generate-base-src-value="{{ recipeImg }}"
            data-image-generate-refresh-param-value="v"
          >
            <div class="d-flex align-items-center gap-2">
              <img
                src="{{ recipeImg }}"
                alt="{{ recipe.name }}"
                width="28"
                height="28"
                loading="lazy"
                decoding="async"
                style="object-fit: contain; border-radius: 8px;"
                data-image-generate-target="img"
                data-image-generate-base-src-value="{{ recipeImg }}"
              >
              <strong>{{ recipe.name }}</strong>
              <span class="badge text-bg-danger" title="Stock insuffisant">
                <span class="d-none d-md-inline">Manque</span>
                <span class="d-inline d-md-none">
                  <i class="fa-solid fa-triangle-exclamation"></i>
                </span>
              </span>
            </div>

            <div class="d-flex gap-2">
              <button
                class="btn btn-sm btn-outline-primary"
                data-action="click->image-generate#generate"
                title="G√©n√©rer l‚Äôimage"
                aria-label="G√©n√©rer l‚Äôimage"
              >
                ‚ú®
              </button>

              <a
                href="{{ path('app_recipe_edit', { id: recipe.id }) }}"
                class="btn btn-sm btn-outline-secondary rp-icon-btn"
                title="Modifier"
                aria-label="Modifier"
              >
                <i class="fa-solid fa-pen"></i>
              </a>

              {{ include('recipe/_delete_form.html.twig', { recipe }) }}
            </div>
          </div>

          <div class="card-body p-0">
            {% if view.items|length == 0 %}
              <div class="p-3 text-muted">
                Aucun ingr√©dient.
              </div>
            {% else %}
              <div class="table-responsive">
                <table class="table mb-0 align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Ingr√©dient</th>
                      <th class="text-end">Besoin</th>
                      <th class="text-end">Stock</th>
                      <th class="text-end">√âcart</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for item in view.items %}
                      {% set ing = item.ingredient %}
                      {% set unit = item.unitLabel
                        ?? (item.unit is defined and item.unit ? item.unit.value : '')
                      %}
                      {% set isMissing = item.is_missing %}

                      <tr>
                        <td class="{{ isMissing ? 'fw-semibold' : '' }}">
                          {% if ing %}
                            {% set ingImg = ingredient_image(ing) %}
                            <div class="d-flex align-items-center gap-2">
                              <img
                                src="{{ ingImg }}"
                                alt="{{ ing.name }}"
                                width="24"
                                height="24"
                                loading="lazy"
                                decoding="async"
                                style="object-fit: contain; border-radius: 6px;"
                              >
                              <span>{{ ing.name }}</span>
                            </div>
                          {% else %}
                            Ingr√©dient supprim√©
                          {% endif %}
                        </td>

                        <td class="text-end">
                          {% if item.needed is null %}
                            <span class="text-muted">‚Äî</span>
                          {% else %}
                            {{ item.needed }}
                            {% if unit == 'piece' %}
                              <span class="d-none d-md-inline"> {{ unit }}</span>
                            {% else %}
                              {{ unit }}
                            {% endif %}
                          {% endif %}
                        </td>

                        <td class="text-end">
                          <span class="fw-semibold">{{ item.stock }}</span>
                          {% if unit == 'piece' %}
                            <span class="d-none d-md-inline"> {{ unit }}</span>
                          {% else %}
                            {{ unit }}
                          {% endif %}
                        </td>

                        <td class="text-end">
                          {% if item.needed is null %}
                            <span class="text-muted">‚Äî</span>
                          {% else %}
                            {% if isMissing %}
                              <span class="badge text-bg-danger" title="Stock insuffisant">
                                <span class="d-none d-md-inline">
                                  Manque {{ item.missing_amount|default(0)|round(2) }} {{ unit }}
                                </span>
                                <span class="d-inline d-md-none">
                                  <i class="fa-solid fa-triangle-exclamation"></i>
                                </span>
                              </span>
                            {% else %}
                              <span class="badge text-bg-success">OK</span>
                            {% endif %}
                          {% endif %}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

{% endblock %}
