{# templates/recipe_wizard/_ingredient_item.html.twig #}

{% set ing = ri.ingredient %}
{% set unitValue = ri.unitValue|default('') %}
{% set unitLabel = ri.unitLabel|default(unitValue) %}

{% set updateUrl = path('recipe_wizard_ingredient_update_quantity', { id: ri.recipe.id, riId: ri.id }) %}
{% set updateToken = csrf_token('update_recipe_ingredient_' ~ ri.id) %}

{% if variant == 'mobile' %}

  <div
    class="swipe-item {% if first|default(false) %}swipe-hint{% endif %}"
    data-recipe-ingredients-item-id="{{ ri.id }}"
    data-recipe-ingredients-item-name="{{ ing.name }}"
    data-controller="swipe-reveal"
    data-swipe-reveal-open-class-value="is-revealed"
  >
    <div class="swipe-actions">
      <form
        method="post"
        action="{{ path('recipe_wizard_ingredient_delete', { id: ri.recipe.id, riId: ri.id }) }}"
        data-action="submit->recipe-ingredients#deleteItem"
      >
        <input type="hidden" name="_token" value="{{ csrf_token('delete_recipe_ingredient_' ~ ri.id) }}">

        <button type="submit" class="rp-action-btn swipe-trash" title="Supprimer" aria-label="Supprimer">
          <img src="{{ asset('img/actions/delete.png') }}" alt="" class="rp-action-thumb">
        </button>
      </form>
    </div>

    <div class="swipe-content">
      <div class="d-flex align-items-center justify-content-between gap-2">
        <div class="d-flex align-items-center gap-2 flex-grow-1" style="min-width:0;">
          <img
            src="{{ ingredient_image(ing) }}"
            alt="{{ ing.name }}"
            width="50"
            height="50"
            loading="lazy"
            decoding="async"
            style="object-fit: contain; border-radius: 8px;"
          >
          <div class="text-truncate">
            <span class="fw-semibold">{{ ing.name|capitalize }}</span>
            {% if unitLabel %}
              <span class="text-muted"> · {{ unitLabel }}</span>
            {% endif %}
          </div>
        </div>

        {# Mobile: tap quantité -> ouvre modale quantité #}
        <button
          type="button"
          class="rp-qty-btn"
          data-action="click->recipe-ingredients#openQuantityModal"
          data-recipe-ingredients-qty-id="{{ ri.id }}"
          data-recipe-ingredients-qty-name="{{ ing.name }}"
          data-recipe-ingredients-qty-value="{{ ri.quantity }}"
          data-recipe-ingredients-qty-unit="{{ unitLabel ?: 'unité' }}"
          data-recipe-ingredients-qty-url="{{ updateUrl }}"
          data-recipe-ingredients-qty-token="{{ updateToken }}"
        >
          <span class="fw-bold" data-recipe-ingredients-qty-display>{{ ri.quantity }}</span>
        </button>
      </div>
    </div>
  </div>

{% else %}

  <tr
    data-recipe-ingredients-item-id="{{ ri.id }}"
    data-recipe-ingredients-item-name="{{ ing.name }}"
  >
    <td>
      <div class="d-flex align-items-center gap-2">
        <img
          src="{{ ingredient_image(ing) }}"
          alt="{{ ing.name }}"
          width="50"
          height="50"
          loading="lazy"
          style="object-fit: contain; border-radius: 6px;"
        >
        <span>{{ ing.name|capitalize }}</span>
      </div>
    </td>

    {# Desktop: inline edit invisible #}
    <td class="text-end">
      <span
        class="rp-qty"
        data-recipe-ingredients-qty-id="{{ ri.id }}"
        data-recipe-ingredients-qty-value="{{ ri.quantity }}"
        data-recipe-ingredients-qty-url="{{ updateUrl }}"
        data-recipe-ingredients-qty-token="{{ updateToken }}"
        data-action="click->recipe-ingredients#startEditQuantity"
      >
        <span class="fw-bold" data-recipe-ingredients-qty-display>{{ ri.quantity }}</span>

        <input
          type="text"
          inputmode="decimal"
          class="rp-qty-input"
          value="{{ ri.quantity }}"
          data-action="blur->recipe-ingredients#commitEditQuantity keydown->recipe-ingredients#quantityKeydown"
        >
      </span>
    </td>

    <td class="text-end">{{ unitLabel ?: '—' }}</td>

    <td class="text-end">
      <form
        method="post"
        action="{{ path('recipe_wizard_ingredient_delete', { id: ri.recipe.id, riId: ri.id }) }}"
        class="d-inline"
        data-action="submit->recipe-ingredients#deleteItem"
      >
        <input type="hidden" name="_token" value="{{ csrf_token('delete_recipe_ingredient_' ~ ri.id) }}">
        <button type="submit" class="rp-action-btn" title="Supprimer" aria-label="Supprimer">
          <img src="{{ asset('img/actions/delete.png') }}" alt="" class="rp-action-thumb">
        </button>
      </form>
    </td>
  </tr>

{% endif %}
